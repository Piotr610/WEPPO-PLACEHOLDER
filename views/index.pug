extends layout

mixin product(imgSource, title, description, price)
  .col-sm-6.col-md-4
    .thumbnail.text-center
      img.img_responsive(src=imgSource alt="err")
      .caption
        h3=title
        p.description=description
        div.clearfix
          .price.float-left=price + "z≈Ç"
          a.btn.btn-success.float-right(href="#" role="button") Add to cart

block content
  .row
    each product in products
      +product(product.image, product.title, product.description, product.price)
